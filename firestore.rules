rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // This rule allows anyone with your Firestore database reference to view, edit,
    // and delete all data in your Firestore database. It is useful for getting
    // started, but it is configured to expire after 30 days because it
    // leaves your app open to attackers. At that time, all client
    // requests to your Firestore database will be denied.
    //
    // Make sure to write security rules for your app before that time, or else
    // all client requests to your Firestore database will be denied until you Update
    // your rules
    // Użytkownicy mogą czytać i pisać tylko swoje dane
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Subskrypcje - użytkownik może czytać i pisać tylko swoje
    match /subscriptions/{subscriptionId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.auth.uid == subscriptionId.split('_')[0]);
    }
    
    // Talizmany - użytkownik może czytać i pisać tylko swoje
    match /talismans/{talismanId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.auth.uid == talismanId.split('_')[0]);
    }
    
    // Statystyki - publiczne do odczytu
    match /statistics/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Domyślne - tylko zalogowani użytkownicy
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}